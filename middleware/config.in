config MIDDLEWARE_RAVENSCAR
       def_bool y

       depends on RUNTIME_PROFILE_RAVENSCAR_FULL || RUNTIME_PROFILE_RAVENSCAR_SFP

       # Sources
       option source_dir="middleware/src/ravenscar-common"

menu "Filesystem"
      config FILESYSTEM_MAX_PATH_LEN
             int "Maximun path length"
             default "1024"
             range "1" "2048"

endmenu
